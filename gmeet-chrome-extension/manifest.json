{
  "manifest_version": 3,
  "name": "Google Meet Time Tracker",
  "version": "1.0.0",
  "description": "Track time spent in Google Meet calls and view analytics dashboard",

  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],

  "host_permissions": [
    "https://meet.google.com/*",
    "http://127.0.0.1:3000/*",
    "https://api.stats.rb2.fr/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Google Meet Time Tracker",
    "default_icon": {
      "16": "icons/icon16.jpeg",
      "48": "icons/icon48.jpeg",
      "128": "icons/icon128.jpeg"
    }
  },

  "icons": {
    "16": "icons/icon16.jpeg",
    "48": "icons/icon48.jpeg",
    "128": "icons/icon128.jpeg"
  }
}
